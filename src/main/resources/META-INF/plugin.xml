<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jchrist.radicleintellijplugin</id>
    <name>radicle-intellij-plugin</name>
    <vendor>jchrist</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.jchrist.radicleintellijplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.jchrist.radicleintellijplugin.services.MyProjectService"/>

        <applicationConfigurable
                parentId="tools"
                instance="com.github.jchrist.radicleintellijplugin.config.ApplicationSettingsConfigurable"
                id="com.github.jchrist.radicleintellijplugin.config.ApplicationSettingsConfigurable"
                displayName="My Application Settings"/>

    </extensions>

    <applicationListeners>
        <listener class="com.github.jchrist.radicleintellijplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
