<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>network.radicle.jetbrains</id>
    <name>Radicle</name>
    <vendor>CytechMobile</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>Git4Idea</depends>

    <!-- Declare the default resource location for localizing menu strings -->
    <resource-bundle>messages.RadicleBundle</resource-bundle>

    <description><![CDATA[
            This plugin allows you to start using <a href="https://radicle.xyz">Radicle</a> (the decentralized Code
            Collaboration protocol) directly from your Jetbrains IDE.

            Radicle enables developers to securely collaborate on software over a peer-to-peer network, built on top of Git,
            that provides GitHub/GitLab-like functionality (think Pull/Merge Requests, Issues, etc.).

            This plugin requires <strong>version 0.6.1</strong> the `rad` Command Line Interface (CLI) tool to be installed.
            Installation instructions for `rad` are available here: https://radicle.xyz/get-started

            This plugin is available under <a href="http://www.apache.org/licenses/LICENSE-2.0">Apache License, Version 2.0</a>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="network.radicle.jetbrains.radiclejetbrainsplugin.services.RadicleApplicationService"/>
        <projectService serviceImplementation="network.radicle.jetbrains.radiclejetbrainsplugin.services.RadicleProjectService"/>

        <applicationConfigurable
                parentId="project.propVCSSupport.Mappings"
                instance="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsView"
                id="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsView"
                groupWeight="-400"
                displayName="Radicle"/>

        <applicationConfigurable
                groupId="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsView"
                displayName="Identities"
                id="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsIdentitiesView"
                instance="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsIdentitiesView" />

        <applicationConfigurable
                groupId="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsView"
                displayName="Seed Nodes"
                id="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsSeedNodeView"
                instance="network.radicle.jetbrains.radiclejetbrainsplugin.config.RadicleSettingsSeedNodeView" />

        <checkoutProvider implementation="network.radicle.jetbrains.radiclejetbrainsplugin.dialog.clone.RadCheckoutProvider" />
        <openapi.vcs.ui.cloneDialog.VcsCloneDialogExtension implementation="network.radicle.jetbrains.radiclejetbrainsplugin.dialog.clone.CloneRadDialogExtension"/>
        <prePushHandler implementation="network.radicle.jetbrains.radiclejetbrainsplugin.listeners.RadiclePrePushListener"/>
        <notificationGroup id="Radicle.NotificationGroup" displayType="BALLOON" key="radicle"/>
    </extensions>

    <applicationListeners>
        <listener class="network.radicle.jetbrains.radiclejetbrainsplugin.listeners.RadicleManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <!-- Radicle Group, under Git -->
        <group
            id="Radicle.MainMenu" compact="true"
            text="Radicle" popup="true">
            <add-to-group group-id="Git.MainMenu" relative-to-action="Git.Configure.Remotes" anchor="before"/>
        </group>
        <!-- Add your actions here -->
        <action id="Radicle.Sync" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleSyncAction"
                text="Synchronize" description="Radicle sync" icon="/icons/rad_sync.svg">
            <add-to-group group-id="Radicle.MainMenu" anchor="first"  />
<!--            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>-->
        </action>

        <action id="Radicle.Pull" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePullAction"
                text="Pull" description="Radicle pull" icon="/icons/rad_pull.svg">
            <add-to-group group-id="Radicle.MainMenu" anchor="first" />
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>-->
        </action>

        <action id="Radicle.Push" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePushAction"
                text="Push" description="Radicle push" icon="/icons/rad_push.svg">
            <add-to-group group-id="Radicle.MainMenu" anchor="first" />
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>-->
        </action>

        <action id="Radicle.Clone" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleCloneAction"
                text="Clone" description="Radicle clone" icon="/icons/rad_clone.svg">
            <add-to-group group-id="Radicle.MainMenu" anchor="first" />
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>-->
        </action>

        <action id="Radicle.Publish" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePublishAction"
                text="Share Project on Radicle" description="Radicle publish" icon="/icons/rad_share.svg">
            <add-to-group group-id="Radicle.MainMenu" anchor="first" />
            <!--            <keyboard-shortcut keymap="$default" first-keystroke="alt T"/>-->
        </action>

        <action id="Radicle.Sync.navBartoolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleSyncAction"
                text="Rad Sync" description="Radicle sync from toolbar" icon="/icons/rad_sync.svg">
            <add-to-group group-id="VcsNavBarToolbarActions" anchor="after" relative-to-action="Vcs.Push"/>
        </action>

        <action id="Radicle.Push.navBartoolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePushAction"
                text="Rad Push" description="Radicle push from toolbar" icon="/icons/rad_push.svg">
            <add-to-group group-id="VcsNavBarToolbarActions" anchor="after" relative-to-action="Radicle.Sync.navBartoolbar"/>
        </action>

        <action id="Radicle.Pull.navBartoolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePullAction"
                text="Rad Pull" description="Radicle pull from toolbar" icon="/icons/rad_pull.svg">
            <add-to-group group-id="VcsNavBarToolbarActions" anchor="after" relative-to-action="Radicle.Push.navBartoolbar"/>
        </action>

        <action id="Radicle.Clone.cloneBartoolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleCloneAction"
                text="Rad Clone" description="Radicle clone from toolbar" icon="/icons/rad_clone.svg">
            <add-to-group group-id="VcsNavBarToolbarActions" anchor="after" relative-to-action="Radicle.Pull.navBartoolbar"/>
        </action>

        <action id="Radicle.Sync.toolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleSyncAction"
                text="Rad Sync" description="Radicle sync from toolbar" icon="/icons/rad_sync.svg">
            <add-to-group group-id="VcsToolbarActions" anchor="after" relative-to-action="Vcs.Push"/>
        </action>

        <action id="Radicle.Push.toolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePushAction"
                text="Rad Push" description="Radicle push from toolbar" icon="/icons/rad_push.svg">
            <add-to-group group-id="VcsToolbarActions" anchor="after" relative-to-action="Radicle.Sync.toolbar"/>
        </action>

        <action id="Radicle.Pull.toolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadiclePullAction"
                text="Rad Pull" description="Radicle pull from toolbar" icon="/icons/rad_pull.svg">
            <add-to-group group-id="VcsToolbarActions" anchor="after" relative-to-action="Radicle.Push.toolbar"/>
        </action>

        <action id="Radicle.Clone.toolbar" class="network.radicle.jetbrains.radiclejetbrainsplugin.actions.RadicleCloneAction"
                text="Rad Clone" description="Radicle clone from toolbar" icon="/icons/rad_clone.svg">
            <add-to-group group-id="VcsToolbarActions" anchor="after" relative-to-action="Radicle.Pull.toolbar"/>
        </action>


    </actions>
</idea-plugin>
